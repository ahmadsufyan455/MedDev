<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.meddev">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedDev">
        <activity android:name=".dashboard.DetectionResultActivity" />
        <activity android:name=".detection.DiseaseResultActivity" />
        <activity android:name=".detection.DiseaseDetailActivity" />
        <activity android:name=".detection.DiseaseDetectionActivity" />
        <activity android:name=".dashboard.DashboardActivity" />
        <activity android:name=".auth.login.LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.register.RegisterActivity" />
    </application>

</manifest>