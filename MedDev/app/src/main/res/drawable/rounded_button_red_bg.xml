<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dp" />
            <stroke android:width="1dip" android:color="@color/red_accent" />
            <gradient android:angle="-90" android:startColor="@color/red_accent" android:endColor="@color/red_accent_dark"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="24dp" />
            <stroke android:width="1dip" android:startColor="@color/red_accent" />
            <solid android:color="@color/red_accent"/>
        </shape>a
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dp" />
            <stroke android:width="1dip" android:color="@color/red_accent" />
            <gradient android:angle="-90" android:startColor="@color/red_accent" android:endColor="@color/red_accent_dark" />
        </shape>
    </item>

</selector>